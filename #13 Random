import random
c1 = input('Com quem você quer sair hoje? \n Opção 1: ')
c2 = input('Opção 2: ')
c3 = input('Opção 3: ')
c4 = input('Opção 4: ')
c5 = input('Opção 5: ')
lista = [c1, c2, c3, c4, c5]
print('O crush do dia será {}'.format(random.choice(lista)))








